@model List<ADHDTool.Models.BucketListEntry>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    string input = "";
}
<link rel="stylesheet" href="/css/BucketList.css" />

<div id="BucketList" class="header">
  <h1>Bucket List</h1>
  <div id="ListEntrys" class="bucketList">
        @foreach (var entry in Model)
        {
            <input id="@entry.ID" type="checkbox">
            <label for="@entry.ID">@entry.Titel</label>
        }
        
    <br />
    <input type="text" id="myInput" placeholder="Title..." value='@input'>
    <a asp-area="" asp-controller="BucketList" asp-action="addEntry">ADD</a>
</div>
</div>


